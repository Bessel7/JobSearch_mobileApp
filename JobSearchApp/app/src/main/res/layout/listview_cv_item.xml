<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/nom_prenom_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nom et Prénom"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/age_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Âge"
        android:layout_below="@+id/nom_prenom_textview"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/adresse_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Adresse"
        android:layout_below="@+id/age_textview"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/email_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:layout_below="@+id/adresse_textview"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/telephone_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Téléphone"
        android:layout_below="@+id/email_textview"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/specialite_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Spécialité"
        android:layout_below="@+id/telephone_textview"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp" />
    <TextView
        android:id="@+id/niveau_etude_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Niveau d'étude"
        android:layout_below="@+id/specialite_textview"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/experience_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Expérience Professionnelle"
        android:layout_below="@+id/niveau_etude_textview"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp" />

</RelativeLayout>
